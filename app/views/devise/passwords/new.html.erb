<html lang="en">
<% content_for:header_content do %>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FOODAPP</title>
    <!-- Bootstrap -->
  
  <!-- Style Switcher Styles-->

  <%= javascript_include_tag 'pace.js', 'data-turbolinks-track' => true %>

    <%= stylesheet_link_tag    'theme.css', media: 'all', 'data-turbolinks-track' => true %>

    <%= stylesheet_link_tag    'font-awesome.css', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'fixed-top.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'font-awesome.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'jquery.min.js', 'data-turbolinks-track' => true %>

  <script type="text/javascript">



function error_msg(msg,sign)
{
  if (sign=='error')
  {

  swal({
          title: "Sorry!!",
          text: msg,
          type: "error",
          confirmButtonClass: "btn-danger",
          confirmButtonText: "OK",

         })
   }
   else
   {
    swal({
          title: "Success!!",
          text: msg,
          type: "success",
          confirmButtonClass: "btn-success",
          confirmButtonText: "OK",

         })
   }
}
</script>

    <script type="text/javascript">
      
       $(function validateform() {

     $("#email_valid").click(function() {
        var x=$("#email").val();
        var atposition=x.indexOf("@");  
var dotposition=x.lastIndexOf(".");  
if (atposition<1 || dotposition<atposition+2 || dotposition+2>=x.length){  
  error_msg('Please enter a valid e-mail address','error');
  return false;  
  }

        });


  });


    </script>
<%end%>
<% content_for :nav_content do %>

<%end%>
<% content_for :top_content do %>
    
    <div class="container padding-l-r-0 mar-top-n-menu">
      <div class="panel panel-default">
        
        <div class="panel-body" style="padding-top:10px;">
          <div class="col-sm-6 padding-l-r-15">
            <%= form_for(resource, as: resource_name, url: email_inbox_path,html: { method: :post, class:"form-horizontal",role:"form" }) do |f| %>
                <div class="form-group" style="padding-top:20px;">
                  <div class="col-md-12 dis-table" style="display:block"> 
                    <span style="color:#fbae5c;font-size:18px">Forgot Password??</span>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :email,'Email:' ,class:'control-label col-sm-12', for:'email',style:'color:#fff;text-align:left;'%>
                  <div class="col-sm-12">
                  <%= f.email_field :email, autofocus: true , class: 'form-control',id:'email',name:'email' ,placeholder:'Enter email'%>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12 button-ss-b" style="margin-top:7px">
                  <span id="btn-login">
                    <a href="#" >
                    <%= f.submit "Send me reset password Instruction",class:"btn btn-success button2 ",style:"width:250px;float:right",:onclick => "return validateform();",id:'email_valid' %>
                    </a>
                  </span>
                  </div>
                </div>
                
                  <% end %>     
            </br>
            </br>
          </div>
        </div>
      </div>
    </div>
<% end %>
