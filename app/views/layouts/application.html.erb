<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="favicon.ico">
  <title>blood Count</title>
  <!-- Bootstrap -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css',media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js',media: 'all', 'data-turbolinks-track' => true %>

  <%= yield :header_content %>
  <%= csrf_meta_tags %>
   <style>

    .btn-success.ok
    {
      padding: 11px 16px
    }

    .btn-danger.ok
    {
      padding: 11px 16px
    }


               @media (max-width: 767px)
                {

                  .sweet-alert {
                    border:solid brown 5px;
                    width: 350px;
                      width: auto;
                      margin-left: 0;
                      margin-right: 0;
                      left: 15px;
                      right: 15px;
                  }
              } 
              @media (min-width: 768px)
                {    .sweet-alert{
                    border:solid brown 5px;
                    width: 350px;
                    left: 55%;
                  }
                }
                  .lead{
                    color: brown;
                  }
                  .confirm{
                    background-color: brown;

                  }


  </style>
</head>
<body>
<% if user_signed_in? %>
    <%= yield :nav_content %>
<% end %>
<div class="container">
  <% flash.each do |key, value| %>


     <% if key == "notice" %>

      <script>
         swal({
          title: "Success!!",
          text: '<%=value %>',
          type: "success",
          confirmButtonClass: "btn-success ok",
          confirmButtonText: "OK",

        })
      </script>
        <% elsif key == "alert" %>
        <script>
         swal({
          title: "Sorry!!",
          text: '<%=value %>',
          type: "error",
          confirmButtonClass: "btn-danger ok",
          confirmButtonText: "OK",

         })
         </script>
          <% else %>

           <!--<div class="alert alert-<%= key %>" style="color:darkgreen;background-color: lightgreen;">-->
            <script>
          swal({
          title: "Information!!",
          text: '<%=value %>',
          type: "success",
          confirmButtonClass: "btn-success ok",
          confirmButtonText: "OK",

        })
         </script>
        <%end %>
      </div>
      <% end%>
</div>
<%= yield :top_content %>
</body>
</html>

